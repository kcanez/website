<%= simple_form_for @beer, :html => {:multipart => true} do |f| %>
	<%= select_tag(:category_id, options_for_select(@categories), :prompt => "Select a style") %>
	<%= f.input :name, label: "Beer Name:" %>
	<%= f.input :brewery %>
	<%= f.input :description %>
	<%= f.input :review %>
	<%= f.input :style %>
	<%= f.input :abv %>
	<%= f.button :submit %>
<% end %>
