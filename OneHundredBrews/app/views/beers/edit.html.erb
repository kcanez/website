<h1>Edit Beer</h1>

<%= simple_form_for @beer, :html => {:multipart => true} do |f| %>
	<%= f.select :category_id, @categories %>
	<%= f.file_field :beer_image %>
	<%= f.input :name, label: "Beer Name:" %>
	<%= f.input :brewery %>
	<%= f.input :description %>
	<%= f.input :review %>
	<%= f.input :style %>
	<%= f.input :abv %>
	<%= f.button :submit %>
<% end %>

